PLUGIN_DIR="$HOME/.config/sketchybar/plugins"

killall stats_provider
$HOME/.config/sketchybar/helpers/stats_provider --cpu usage --disk usage --memory ram_usage \
  --interval 2 --no-units &

# B A R
bar=(
  height=40
  position=top
#   blur_radius=30
#   sticky=off
#   padding_left=10
#   padding_right=10
   color=0x00000000
)

# D E F A U L T S
default=(
  padding_left=5
  padding_right=5
  icon.font="VictorMono Nerd Font:Bold:14.0"
  label.font="VictorMono Nerd Font:Bold:17.0"
  icon.color=0xffffffff
  label.color=0xffffffff
  icon.align=center
  label.align=center
  icon.y_offset=1
  label.y_offset=1
  icon.padding_left=5
  icon.padding_right=5
  label.padding_left=5
  label.padding_right=5
)

sketchybar --bar "${bar[@]}" --default "${default[@]}"

# M O D E
mode=(
  icon.drawing=off
  label.padding_left=0
  label.color=0xff000000
  label="üêà"
)

sketchybar --add item mode left \
    --set mode "${mode[@]}" 

# M A C O S  S P A C E S
# space=(
#   label.drawing=off
#   icon.drawing=off
#   background.color=0xff{{ .dracula.hex.green }}
#   background.corner_radius=5
#   background.height=20
#   label.padding_right=6 
#   label.color=0xff000000
#   script="$PLUGIN_DIR/space.sh"
# )

# sketchybar --add item space.macos left \
#     --set space.macos "${space[@]}" \
#     --subscribe space.macos space_change

# A E R O S P A C E
sketchybar --add event aerospace_workspace_change
for sid in $(aerospace list-workspaces --all); do
    sketchybar --add item space.$sid left \
        --subscribe space.$sid aerospace_workspace_change space_windows_change space_change \
        --set space.$sid \
        background.color=0xffbd93f9 \
        background.corner_radius=5 \
        background.height=20 \
        background.drawing=off \
        icon.drawing=off \
        label="$sid" \
        label.padding_right=6 \
        click_script="aerospace workspace $sid" \
        script="$PLUGIN_DIR/aerospace.sh $sid"
done

sketchybar --add bracket spaces '/space\..*/'               \
           --set         spaces background.color=0x66000000 \
                                background.corner_radius=4  \
                                background.height=32

sketchybar --add item chevron left \
    --set chevron icon=Û∞ßõ label.drawing=off icon.font="VictorMono Nerd Font:Bold:25.0" padding_left=10 padding_right=3 icon.y_offset=0 \
    --add item front_app left \
    --set front_app icon.drawing=off script="$PLUGIN_DIR/front_app.sh" \
    --subscribe front_app front_app_switched \
    --set front_app background.color=0x66000000 background.corner_radius=4 background.height=32 padding_right=15 \

# B A T T E R Y  V O L U M E  C L O C K
sketchybar --add item clock right \
    --set clock update_freq=10 icon=Ôê∫  script="$PLUGIN_DIR/clock.sh" \
    --add item volume right \
    --set volume script="$PLUGIN_DIR/volume.sh" \
    --subscribe volume volume_change \
    --add item battery right \
    --set battery update_freq=120 script="$PLUGIN_DIR/battery.sh" \
    --subscribe battery system_woke power_source_change

stats_mem=(
  script="$PLUGIN_DIR/stats_mem.sh"
  updates=on
  icon=ÓøÖ
  background.height=12
  background.color=0x01000000
)
sketchybar --add event system_stats
sketchybar --add graph stats_mem left 40 \
           --set stats_mem "${stats_mem[@]}" \
           --subscribe stats_mem system_stats

stats_cpu=(
  script="$PLUGIN_DIR/stats_cpu.sh"
  updates=on
  icon=Ôíº
  background.height=12
  background.color=0x01000000
)
sketchybar --add graph stats_cpu left 40 \
           --set stats_cpu "${stats_cpu[@]}" \
           --subscribe stats_cpu system_stats

# see: https://github.com/FelixKratz/SketchyBar/issues/639
sketchybar --add bracket stats '/stats_.*/'               \
           --set stats background.color=0x66000000 \
                 background.corner_radius=4  \
                 background.height=32
media=(
  script="$PLUGIN_DIR/media.sh"
  updates=on
  scroll_texts=on
  label.max_chars=35
)

sketchybar --add event media_stream_changed

sketchybar --add item media right \
           --set media "${media[@]}" \
           --subscribe media media_stream_changed

sketchybar --update
